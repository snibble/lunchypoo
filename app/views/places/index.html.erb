<%= form_tag(places_path, :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Listing places near <%= @location[0] %>, <%= @location[1] %></h1>

<table>
  <tr>
    <th>Name</th>
	<th>Lat</th>
    <th>Long</th>
	<th>Type(s)</th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.lat %></td>
    <td><%= place.lng %></td>
  </tr>
<% end %>
</table>

<br />

<br />

<%= link_to 'New Place', new_place_path %>
